<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="diagramm" />

    <!-- GraphLiveView -->

    <view
        android:id="@+id/view_da_graphview_Speed"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        class="de.timweb.android.util.GraphLiveView"
        android:background="#222222" 
         android:visibility="gone">
    </view>

    <view
        android:id="@+id/view_da_graphview_Distance"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        class="de.timweb.android.util.GraphLiveView"
        android:background="#222222"
        android:visibility="gone" >
    </view>

    <view
        android:id="@+id/view_da_graphview_Steps"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        class="de.timweb.android.util.GraphLiveView"
        android:background="#222222"
        android:visibility="gone" >
    </view>

    <view
        android:id="@+id/view_da_graphview_Height"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        class="de.timweb.android.util.GraphLiveView"
        android:background="#222222"
        android:visibility="gone" >
    </view>

    <!-- ENDE GraphLiveView -->

</LinearLayout>