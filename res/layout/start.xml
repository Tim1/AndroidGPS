<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dip" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/tv_txt_start_activity" />

    <Button
        android:id="@+id/but_GPSTest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/bt_txt_GPS_test"
        android:visibility="gone" />

    <Button
        android:id="@+id/but_DRAWTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="DrawTest"
        android:visibility="gone" />

    <Button
        android:id="@+id/but_SENSORTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="SensorTest"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/but_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:onClick="onButtonClick"
        android:src="@drawable/ic_start_wifi_on" />

    <ImageButton
        android:id="@+id/but_start_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#000000"
        android:onClick="onButtonClick"
        android:src="@drawable/anim_but_about" />

    <ImageButton
        android:id="@+id/but_start_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#000000"
        android:onClick="onButtonClick"
        android:src="@drawable/anim_but_preferences" />

    <ImageButton
        android:id="@+id/but_start_gps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#000000"
        android:onClick="onButtonClick"
        android:src="@drawable/ic_start_gps_on" />

    <View
        android:id="@+id/view_mid"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/but_start_credits"
        android:layout_centerVertical="true"
         />

    <Button
        android:id="@+id/but_chooseTrack"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_mid"
        android:layout_centerHorizontal="true"
        android:background="@drawable/anim_but_track"
        android:onClick="onButtonClick"
        android:paddingTop="45dp"
        android:text="@string/bt_txt_choose_track"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/but_go"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/but_chooseTrack"
        android:layout_below="@+id/view_mid"
        android:background="@drawable/anim_but_go"
        android:onClick="onButtonClick"
        android:paddingTop="45dp"
        android:text="@string/bt_txt_go"
        android:textColor="#FFFFFF" />

</RelativeLayout>