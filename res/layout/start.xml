<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_txt_start_activity" />
    <Button
        android:id="@+id/but_chooseTrack"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/bt_txt_choose_track" />

    <Button
        android:id="@+id/but_preferences"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/bt_txt_preferences" />

    <Button
        android:id="@+id/but_GPSTest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/bt_txt_GPS_test" />

    <Button
        android:id="@+id/but_DRAWTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="DrawTest" />
    <Button
        android:id="@+id/but_SENSORTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="SensorTest" 
        android:visibility="gone"/>

    <Button
        android:id="@+id/but_go"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="@string/bt_txt_go" />

</LinearLayout>
